<div class="section card mb-3">
    <div class="card-body">
        <div class="form-row">
            <div class="col-12">
                <h5 class="h5-responsive font-weight-stone-500 text-dark">Wifi</h5>
            </div>
        </div>
        <div class="form-row d-flex justify-content-center justify-content-md-start">
            <div class="col-12">
                <div class="mb-2 mt-1 title">{{ form.wifi.vars.label }}</div>
                {% for item in form.wifi.vars.choices %}
                    {% set state = hostel.wifi == form.wifi.vars.choices[loop.index0].value %}
                    <div class="form-check form-check-inline data {% if state %}active{% endif %}">
                        <input class="form-check-input with-gap" value="{{ form.wifi.vars.choices[loop.index0].value }}" type="radio"
                               name="{{ form.wifi.vars.full_name }}" id="{{ form.wifi.vars.id }}_{{ loop.index0 }}"
                               {% if state %}checked{% endif %} />
                        <label class="form-check-label" for="{{ form.wifi.vars.id }}_{{ loop.index0 }}">{{ form.wifi.vars.choices[loop.index0].label }}</label>
                    </div>
                {% endfor %}
                <div class="red-text font-weight-stone-500 mt-2">{{ form_errors(form.wifi) }}</div>
            </div>
        </div>
    </div>
</div>

