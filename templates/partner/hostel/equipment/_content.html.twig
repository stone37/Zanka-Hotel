{% import 'Ui/Macro/buttons.html.twig' as buttons %}

{% form_theme form 'Ui/Form/theme.html.twig' %}

{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'partner-form mb-5' }}) }}
    <P class="text-danger my-0">{{ form_errors(form) }}</P>

    <div class="section card mb-3">
        <div class="card-body">
            <div class="form-row">
                <div class="col-12">
                    <h5 class="h5-responsive font-weight-stone-500">Équipements</h5>
                </div>
            </div>
            <div class="form-row d-flex justify-content-center justify-content-md-start">
                <div class="col-12">
                    <div class="app-checkbox-field-bulk">
                        <div class="title mb-3">{{ form.equipments.vars.label }}</div>
                        {{ form_widget(form.equipments) }}
                    </div>
                </div>
            </div>
        </div>
    </div>


    {{ form_widget(form._token) }}

    <div class="d-flex justify-content-end mt-4">
        {% set path = path('app_partner_hostel_index') %}
        <div class="text-center mr-3">{{ buttons.default(path, 'Retour à la liste', 'app-entity-list-btn', 'fas fa-angle-left', 'btn-outline-primary') }}</div>
        <div class="text-center">{{ buttons.validate('Ajouter', 'fas fa-plus', '') }}</div>
    </div>
{{ form_end(form, {'render_rest': false}) }}


