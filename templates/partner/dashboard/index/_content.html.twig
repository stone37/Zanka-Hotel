{% import 'ui/Macro/money.html.twig' as money %}

<section class="row">
    <div class="col-12">
        <h4 class="h4-responsive font-weight-stone-600 text-dark mb-4">Hébergement, réservations et performance</h4>
    </div>
    <div class="col-lg-3 col-md-6 col-12 mb-4">
        <div class="card">
            <div class="row mt-3">
                <div class="col-md-4 col-5 text-left pl-4">
                    <a href="{{ path('app_partner_booking_index') }}" type="button" class="btn-floating btn-lg blue ml-2">
                        <i class="fas fa-calendar-day" aria-hidden="true"></i>
                    </a>
                </div>
                <div class="col-md-8 col-7 text-right mb-2">
                    <h5 class="ml-4 mt-4 mb-2 font-weight-bold pr-3 text-dark">{{ bookingNewNumber }}</h5>
                    <p class="font-small font-weight-normal pr-3">Nouvelle reservations</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 col-12 mb-4">
        <div class="card">
            <div class="row mt-3">
                <div class="col-md-4 col-5 text-left pl-4">
                    <a href="{{ path('app_partner_booking_confirmed_index') }}" type="button"  class="btn-floating btn-lg success-color ml-2">
                        <i class="fas fa-calendar-check" aria-hidden="true"></i>
                    </a>
                </div>
                <div class="col-md-8 col-7 text-right mb-2">
                    <h5 class="ml-4 mt-4 mb-2 font-weight-bold text-dark pr-3">{{ bookingConfirmNumber }}</h5>
                    <p class="font-small font-weight-normal pr-3">Reservations confirmer</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 col-12 mb-4">
        <div class="card">
            <div class="row mt-3">
                <div class="col-md-4 col-5 text-left pl-4">
                    <a href="{{ path('app_partner_booking_cancel_index') }}" type="button"  class="btn-floating btn-lg danger-color ml-2">
                        <i class="fas fa-calendar-times" aria-hidden="true"></i>
                    </a>
                </div>
                <div class="col-md-8 col-7 text-right mb-2">
                    <h5 class="ml-4 mt-4 mb-2 font-weight-bold text-dark pr-3">{{ bookingCancelNumber }}</h5>
                    <p class="font-small font-weight-normal pr-3">Reservations annuler</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 col-12 mb-4">
        <div class="card">
            <div class="row mt-3">
                <div class="col-md-4 col-5 text-left">
                    <a href="{{ path('app_partner_booking_archive_index') }}" type="button"  class="btn-floating btn-lg amber ml-2">
                        <i class="fas fa-calendar-alt" aria-hidden="true"></i>
                    </a>
                </div>
                <div class="col-md-8 col-7 text-right mb-2">
                    <h5 class="ml-4 mt-4 mb-2 font-weight-bold text-dark pr-3">{{ bookingArchiveNumber }}</h5>
                    <p class="font-small font-weight-normal pr-3">Anciennes reservations</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="card mb-3">
            <div class="card-body p-3">
                <h5 class="h5-responsive mb-3 font-weight-stone-600 text-dark">
                    Occupation
                    <span class="small-9">
                        (Du {{ today|format_datetime(pattern="EE dd MMM yyyy") }} au {{ nextMonth|format_datetime(pattern="EE dd MMM yyyy") }})
                    </span>
                </h5>
                <canvas id="room-stats-chart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="row admin-performance">
            <div class="col-12 col-md-4 col-lg-3 d-flex justify-content-center">
                <div class="data revenu text-center d-flex justify-content-center align-items-center mb-3">
                    <div>
                        <div class="font-weight-stone-500 title mb-1">Vente</div>
                        <div class="content font-weight-stone-600 text-dark">{{ money.convertAndFormat(sales) }}</div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4 col-lg-3 d-flex justify-content-center">
                <div class="data reduction text-center d-flex justify-content-center align-items-center mb-3">
                    <div>
                        <div class="font-weight-stone-500 title mb-1">Reduction</div>
                        <div class="content font-weight-stone-600 text-dark">{{ money.convertAndFormat(reduction) }}</div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4 col-lg-3 d-flex justify-content-center">
                <div class="data taxe text-center d-flex justify-content-center align-items-center mb-3">
                    <div>
                        <div class="font-weight-stone-500 title mb-1">Taxe</div>
                        <div class="content font-weight-stone-600 text-dark">{{ money.convertAndFormat(taxe) }}</div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4 col-lg-3 d-flex justify-content-center">
                <div class="data cancel text-center d-flex justify-content-center align-items-center mb-3">
                    <div>
                        <div class="font-weight-stone-500 title mb-1">Taux d'annulation</div>
                        <div class="content font-weight-stone-600 text-dark">{{ bookingCancelPercent }} %</div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4 col-lg-3 d-flex justify-content-center">
                <div class="data paiement text-center d-flex justify-content-center align-items-center mb-3">
                    <div>
                        <div class="font-weight-stone-500 title mb-1">Paiement</div>
                        <div class="content font-weight-stone-600 text-dark">{{ money.convertAndFormat(payment) }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="row mt-md-4">
    <div class="col-12">
        <h4 class="h4-responsive font-weight-stone-600 text-dark mb-4">Commandes</h4>
    </div>
    <div class="col-12 col-lg-6">
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title h5-responsive text-dark font-weight-stone-600 text-center">Nouvelles commandes validées</h5>

                {% if lastOrders|length > 0 %}
                    <table class="table table-responsive-md btn-table">
                        <thead>
                        <tr>
                            <th class="font-weight-stone-500">Commande</th>
                            <th class="font-weight-stone-500">Produits</th>
                            <th class="font-weight-stone-500">Total</th>
                            <th class="font-weight-stone-500"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for payment in lastOrders %}
                            <tr>
                                <th scope="row">
                                    <div class="">
                                        {{ payment.commande.booking.firstname ~' '~ payment.commande.booking.lastname }}
                                    </div>
                                    <div class="small grey-text font-weight-500">{{ payment.commande.booking.email }}</div>
                                </th>
                                <td>{{ payment.commande.booking|length }}</td>
                                <td>{{ money.convertAndFormat(payment.price) }}</td>
                                <td>
                                    <a href="{{ path('app_partner_commande_show', {'id': payment.commande.id}) }}" class="btn btn-grey btn-sm m-0">
                                        <i class="fas fa-eye mr-1"></i> Lister
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="text-center mt-4 mb-3 text-dark">Aucune commande pour le moment</div>
                {% endif %}
            </div>

        </div>
    </div>
    <div class="col-md-4 col-12 mb-4">
        <div class="card">
            <div class="row mt-3">
                <div class="col-md-4 col-5 text-left">
                    <a href="{{ path('app_partner_payout_index') }}" type="button" class="btn-floating btn-lg success-color-dark ml-2">
                        <i class="fas fa-shopping-cart" aria-hidden="true"></i>
                    </a>
                </div>
                <div class="col-md-8 col-7 text-right mb-2">
                    <h5 class="ml-4 mt-4 mb-2 font-weight-bold text-dark pr-3">{{ orders }}</h5>
                    <p class="font-small pr-3">Commande payée</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-6">
        <div class="card mb-4">
            <div class="card-body p-3">
                <h5 class="card-title h5-responsive text-dark font-weight-stone-600 text-center">Commandes validées 30 derniers jours</h5>
                <div class="my-4 px-2">
                    <canvas id="orderDailyLineChart" style="width: 100% !important; height: 375px;"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-6">
        <div class="card mb-4">
            <div class="card-body p-3">
                <h5 class="card-title h5-responsive text-dark font-weight-stone-600 text-center">Commandes validées 24 derniers mois</h5>
                <div class="my-4 px-2">
                    <canvas id="orderMonthlyLineChart" style="width: 100% !important; height: 375px;"></canvas>
                </div>
            </div>
        </div>
    </div>
</section>



