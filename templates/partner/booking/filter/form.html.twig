<div class="row d-flex justify-content-center">
    <div class="col-12 col-md-10">
        <div class="form-row">
            <div class="col-12">
                {{ form_row(form.code) }}
            </div>
            {% if room is not defined %}
                <div class="col-12">
                    {{ form_widget(form.hostel) }}
                </div>
                <div class="col-12">
                    {{ form_widget(form.room) }}
                </div>
            {% endif %}
        </div>
    </div>
</div>