<div class="row mb-4">
    <div class="col-12 d-flex justify-content-end">
        <div class="d-flex ml-auto">
            <div class="">
                {% include 'partner/review/filter.html.twig' with {'form': searchForm}  %}
            </div>
            <div class="mr-3">
                <a href="" class="btn btn-grey" data-toggle="modal" data-target="#entity-search">
                    <i class="fas fa-filter mr-1" aria-hidden="true"></i> Filtres
                </a>
            </div>
        </div>
    </div>
</div>

{% if reviews|length > 0 %}
    <div class="row app-user mb-5 pb-5">
        <div class="col-12">
            <table class="table table-responsive-sm">
                <thead class="text-primary">
                <tr>
                    <th scope="col" class="font-weight-stone-500 text-center">Clients</th>
                    <th scope="col" class="font-weight-stone-500 text-center">Hotel</th>
                    <th scope="col" class="font-weight-stone-500 text-center">Note</th>
                    <th scope="col" class="font-weight-stone-500 text-center"></th>
                </tr>
                </thead>
                <tbody id="list-checkbook-container">
                {% for review in reviews %}
                    <tr>
                        <td class="text-center">{{ review.firstname }} {{ review.lastName }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_partner_hostel_show', {'id': review.hostel.id}) }}" class="font-weight-stone-500 card-link">{{ review.hostel.name }}</a><br>
                        </td>
                        <td class="text-center">{{ review.rating }}</td>
                        <td class="text-center">
                            <div class="dropdown">
                                <a class="dropdown-toggle" type="button" data-toggle="dropdown"><i class="fas fa-ellipsis-h text-primary"></i></a>
                                <div class="dropdown-menu dropdown-primary dropdown-menu-right mt-0">
                                    <a href="{{ path('app_partner_review_show', {'id': review.id}) }}" class="dropdown-item">
                                        <i class="fas fa-eye mr-1"></i> Voir
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-12 d-flex justify-content-start mt-2">
            <div class="font-weight-stone-500 text-secondary">{{ reviews.totalItemCount }} resultats</div>
        </div>
        <div class="col-12 d-flex justify-content-center mt-2 mb-5">
            {{ knp_pagination_render(reviews, 'Ui/_pagination.html.twig') }}
        </div>
    </div>
{% else %}
    <div class="row app-user d-flex justify-content-center">
        <div class="col-12 col-md-8 text-center mt-3 mt-md-5">
            <h3 class="h3-responsive font-weight-stone-600 text-dark">
                Vous n'avez aucun avis.
            </h3>
        </div>
    </div>
{% endif %}



