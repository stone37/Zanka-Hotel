{% import 'Ui/Macro/buttons.html.twig' as buttons %}

<div class="row app-user mt-5">
    <div class="col-12">
        <table class="table table-sm table-bordered table-responsive-sm table-responsive-md">
            <tbody>
            <tr>
                <td class="table-dark text-center font-weight-normal">Clients</td>
                <td class="text-center font-weight-normal">{{ review.firstname }} {{ review.lastName }}</td>
                <td class="table-dark text-center font-weight-normal">Hotel</td>
                <td class="text-center font-weight-normal">
                    <a href="{{ path('app_admin_hostel_show', {'id': review.hostel.id}) }}" class="font-weight-stone-500 card-link">{{ review.hostel.name }}</a><br>
                </td>
                <td class="table-dark text-center font-weight-normal">Note</td>
                <td colspan="3" class="text-center font-weight-normal">{{ review.rating }}/10</td>
            </tr>
            <tr>
                <td class="table-dark text-center font-weight-normal">Personnel</td>
                <td class="text-center font-weight-normal">{{ review.personalRating }}/10</td>
                <td class="table-dark text-center font-weight-normal">Équipements</td>
                <td class="text-center font-weight-normal">{{ review.equipmentRating }}/10</td>
                <td class="table-dark text-center font-weight-normal">Propreté</td>
                <td class="text-center font-weight-normal">{{ review.propertyRating }}/10</td>
                <td class="table-dark text-center font-weight-normal">Confort</td>
                <td class="text-center font-weight-normal">{{ review.comfortRating }}/10</td>
            </tr>
            <tr>
                <td class="table-dark text-center font-weight-normal">Rapport qualité/prix</td>
                <td class="text-center font-weight-normal">{{ review.priceRating }}/10</td>
                <td class="table-dark text-center font-weight-normal">Situation géographique</td>
                <td class="text-center font-weight-normal">{{ review.locationRating }}/10</td>
                <td class="table-dark text-center font-weight-normal">Status</td>
                <td class="text-center font-weight-normal">
                    {% if review.enabled %}
                        <span class="badge badge-success"><i class="fas fa-check mr-1"></i> Actif</span>
                    {% else %}
                        <span class="badge badge-danger"><i class="fas fa-times mr-1"></i> Inactif</span>
                    {% endif %}
                </td>
                <td class="table-dark text-center font-weight-normal">Date de création</td>
                <td class="text-center font-weight-normal">{{ review.createdAt|date('d/m/Y à H:i') }}</td>
            </tr>
            <tr>
                <td class="table-dark text-center font-weight-normal">Titre</td>
                <td colspan="7" class="text-center font-weight-normal">{{ review.title }}</td>
            </tr>
            <tr>
                <td class="table-dark text-center font-weight-normal">Commentaire</td>
                <td colspan="7" class="text-center font-weight-normal">{{ review.comment|raw }}</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-end mt-4 mb-5">
            <div class="text-center mr-3">{{ buttons.default(path('app_partner_review_index'), 'Retour à la liste', 'app-entity-list-btn', 'fas fa-angle-left', 'btn-outline-primary') }}</div>
        </div>
    </div>
</div>



