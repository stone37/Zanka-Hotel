<div class="form-row">
    <div class="col-12">
        <div class="h5-responsive border border-dark border-top-0 border-left-0 border-right-0">
            <div class="badge badge-dark d-inline-block mr-1" style="position: relative; bottom: 6px;">1</div>
            <div class="text-dark d-inline-block font-weight-stone-500">Informations de bases</div>
        </div>
    </div>
</div>

<div class="form-row">
    <div class="col-12 col-md-4 mb-0">
        {{ form_widget(form.type) }}
    </div>
    <div class="col-12 col-md-4 mb-0">
        {{ form_widget(form.location) }}
    </div>
    <div class="col-12 col-md-4">
        {{ form_row(form.mainText) }}
    </div>
    <div class="col-12 col-md-4">
        {{ form_row(form.secondaryText) }}
    </div>
    <div class="col-12 col-md-4">
        {{ form_row(form.url) }}
    </div>
    <div class="col-12 col-md-4">
        {{ form_row(form.bgColor) }}
    </div>
    <div class="col-12 col-md-4">
        {{ form_widget(form.device) }}
    </div>
    <div class="col-12 col-md-4 mt-3">
        <div class="grey-text pb-1">{{ form.enabled.vars.label|trans }}</div>
        <div class="switch stone-switch mt-1 ml-md-2">
            <label>
                Non
                <input type="checkbox" name="{{ form.enabled.vars.full_name }}" id="{{ form.enabled.vars.id }}"
                       value="{{ form.enabled.vars.value }}" {% if form.enabled.vars.checked %}checked="checked{% endif %}">
                <span class="lever"></span>
                Oui
            </label>
        </div>
    </div>
</div>

<div class="form-row">
    <div class="col-12">
        <div class="h5-responsive border border-dark border-top-0 border-left-0 border-right-0">
            <div class="badge badge-dark d-inline-block mr-1" style="position: relative; bottom: 6px;">2</div>
            <div class="text-dark d-inline-block font-weight-stone-500">Media</div>
        </div>
    </div>
</div>
<div class="form-row mt-4 image-bulk-container">
    <div class="col-12 font-weight-stone-500 mb-2">Image</div>
    <div class="col-6 col-md-3 col-lg-3">
        <div class="file-field">
            <div class="btn btn-mdb-color float-left">
                <span>Choisir une image</span>
                <input type="file" name="{{ form.file.children.file.vars.full_name }}" class="entity-image" />
            </div>
        </div>
    </div>

    {% if banner is defined %}
        <div class="col-4 col-md-3 col-lg-2">
            <img src="{{ vich_uploader_asset(banner, 'file') }}" alt="" class="img-fluid img-thumbnail image-view" />
        </div>
    {% else %}
        <div class="col-4 col-md-3 col-lg-2">
            <img src="" alt="" class="img-fluid img-thumbnail image-view" />
        </div>
    {% endif %}
</div>

<div class="form-row mt-5 image-bulk-container">
    <div class="col-12 font-weight-stone-500 mb-2">Image mobile</div>
    <div class="col-6 col-md-3 col-lg-3">
        <div class="file-field">
            <div class="btn btn-mdb-color float-left">
                <span>Choisir une image</span>
                <input type="file" name="{{ form.fileMobile.children.file.vars.full_name }}" class="entity-image" />
            </div>
        </div>
    </div>

    {% if banner is defined %}
        <div class="col-4 col-md-3 col-lg-2">
            <img src="{{ vich_uploader_asset(banner, 'fileMobile') }}" alt="" class="img-fluid img-thumbnail image-view" />
        </div>
    {% else %}
        <div class="col-4 col-md-3 col-lg-2">
            <img src="" alt="" class="img-fluid img-thumbnail image-view" />
        </div>
    {% endif %}
</div>


