                                    <div class="content text-dark">{{ money.convertAndFormat(commande.amountPaid) }}</div>
                                </div>
                            </div>
                            <div class="d-flex {% if app.user %}justify-content-between{% else %}justify-content-center{% endif %} mt-4">
