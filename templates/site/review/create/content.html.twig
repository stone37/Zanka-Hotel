{% form_theme form 'Ui/Form/theme.html.twig' %}

<section class="container mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-12 col-md-10">
            <h3 class="h3-responsive font-weight-bold text-dark text-center">
                Je dépose un avis sur cet établissement
                "<a href="{{ path('app_hostel_show', {'slug': booking.hostel.slug}) }}" class="link">{{ booking.hostel.name }}</a>" !
            </h3>
            <div class="font-weight-stone-500 text-center mb-3">
                Votre avis est très important pour l'établissement et les autres utilisateurs.
            </div>
        </div>
        <div class="col-12 col-md-10">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'hostel-review-form'}}) }}
                <P class="text-danger my-0">{{ form_errors(form) }}</P>

                {{ include('site/review/form.html.twig') }}

                {{ form_widget(form._token) }}

                <div class="d-flex justify-content-center mt-3">
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary z-depth-0">
                            J'envoyer mon avis <i class="fas fa-paper-plane ml-1"></i>
                        </button>
                    </div>
                </div>
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
</section>
