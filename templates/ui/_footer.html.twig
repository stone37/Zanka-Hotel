{{ render(controller('App\\Controller\\BannerController::show', {'type': 'text', 'location': 'bottom'})) }}

{% set settings = config.settings %}
<section class="sup-footer py-4 d-none d-lg-block">
    <div class="row d-flex justify-content-center mx-md-5">
        <div class="col-lg-8 text-center">
            <a href="{{ path('app_partner_create') }}" class="btn btn-outline-white btn-sm z-depth-0 mr-2">Ajouter votre établissement</a>

            {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <a href="{{ path('app_booking_search') }}" class="btn btn-outline-white btn-sm z-depth-0 ml-2">Rechercher des réservations</a>
            {% endif %}
        </div>
    </div>
</section>
<footer class="page-footer text-center text-md-left pt-3 mt-0">
    <div class="container mt-5 mb-4 text-center text-md-left">
        <div class="row">
            <div class="col-md-3 col-lg-3 col-xl-3 mb-5 mb-lg-3">
                <h6 class="spacing font-weight-stone-600 mb-3">
                    <strong>
                        {{ include('site/layout/_logo.html.twig', {'config': config}) }}
                    </strong>
                </h6>
                {% if settings.facebookAddress %}
                    <p>
                        <a href="{{ settings.facebookAddress }}">
                            <i class="fab fa-facebook-square mr-2"></i> Facebook
                        </a>
                    </p>
                {% endif %}

                {% if settings.twitterAddress %}
                    <p>
                        <a href="{{ settings.twitterAddress }}">
                            <i class="fab fa-twitter mr-2"></i> Twitter
                        </a>
                    </p>
                {% endif %}

                {% if settings.instagramAddress %}
                    <p>
                        <a href="{{ settings.instagramAddress }}">
                            <i class="fab fa-instagram mr-2"></i> Instagram
                        </a>
                    </p>
                {% endif %}

                {% if settings.youtubeAddress %}
                    <p>
                        <a href="{{ settings.youtubeAddress }}">
                            <i class="fab fa-youtube mr-2"></i> Youtube
                        </a>
                    </p>
                {% endif %}

                {% if settings.linkedinAddress %}
                    <p>
                        <a href="{{ settings.linkedinAddress }}">
                            <i class="fab fa-linkedin-in mr-2"></i> Linkedin
                        </a>
                    </p>
                {% endif %}
            </div>

            <div class="col-md-2 col-lg-3 col-xl-3 mx-auto mb-5 mb-lg-3">
                <h6 class="spacing font-weight-stone-600 mb-3">
                    <strong>À propos</strong>
                </h6>
                <p>
                    <a href="">À propos de {{ settings.name }}.com</a>
                </p>
                <p>
                    <a href="">Avis et suggestions</a>
                </p>
            </div>

            <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mb-5 mb-lg-3">
                <h6 class="spacing font-weight-stone-600 mb-3">
                    <strong>Liens utiles</strong>
                </h6>
                <p>
                    <a href="{{ path('app_cgu') }}">Condition d'utilisation</a>
                </p>
                <p>
                    <a href="{{ path('app_confidentialite') }}">Politique de Confidentialité</a>
                </p>
                <p>
                    <a href="{{ path('app_cgr') }}">Condition de reservation</a>
                </p>
                <p>
                    <a href="{{ path('app_env') }}">Mentions Légales</a>
                </p>
                <p>
                    <a href="">Centre d'aide</a>
                </p>
                <p>
                    <a href="{{ path('app_contact') }}">Contact</a>
                </p>
            </div>

            <div class="col-md-4 col-lg-3 col-xl-3">
                <h6 class="spacing font-weight-stone-600 mb-3">
                    <strong>Méthodes de payement</strong>
                </h6>
                <div class="payment-method mt-3">
                   <div class="mr-1 mb-2"><img src="{{ asset('assets/img/payment/orange.png') }}" class="img-fluid orange" alt="Orange money logo"></div>
                    {#<div class="mr-1 mb-2"><img src="{{ asset('assets/img/payment/wave.png') }}" class="img-fluid wave" alt="Wave money logo"></div>#}
                    <div class="mr-1 mb-2 mtn-bulk"><img src="{{ asset('assets/img/payment/mtn.png') }}" class="img-fluid mtn" alt="MTN mobile money logo"></div>
                   {#<div class="mr-1 mb-2 moov-bulk"><img src="{{ asset('assets/img/payment/moov.png') }}" class="img-fluid moov" alt="Moov money logo"></div>#}
                    <div class="mr-1 mb-2"><img src="{{ asset('assets/img/payment/visa.png') }}" class="img-fluid visa" alt="Visa logo"></div>
                    <div class="mr-1 mb-2"><img src="{{ asset('assets/img/payment/masterCard.png') }}" class="img-fluid mastercard" alt="Mastercard logo"></div>
                    {#<div class="mr-1 mb-2 wari-bulk"><img src="{{ asset('assets/img/payment/wari.png') }}" class="img-fluid wari" alt="wari logo"></div>#}
                </div>
            </div>
        </div>
    </div>

    <div class="footer-copyright text-center py-3">
        <div class="container-fluid">
            © 2022 Copyright: <a href="https://{{ settings.name|lower }}.com" target="_blank"> {{ settings.name }}.com</a>
            | Créer par <a href="https://octaix.com/" target="_blank">Octaix</a>, tous droits réservés
        </div>
    </div>
</footer>
